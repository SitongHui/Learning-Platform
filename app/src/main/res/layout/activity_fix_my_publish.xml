<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@drawable/border_bottom"
        >
        <Button
            android:id="@+id/fix_goods_info_return"
            android:layout_width="50dp"
            android:layout_marginLeft="10dp"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/icon_return"
            android:background="@drawable/bg_white"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="修改商品"
            android:textSize="20dp"
            android:textColor="#595757"
            android:layout_marginBottom="20dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp">

        <ImageView
            android:id="@+id/my_goods_pic"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="#ee8080"
            android:layout_gravity="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/my_take_pic"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="拍照" />

            <Button
                android:id="@+id/my_gallery"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:text="相册" />

        </LinearLayout>

        <EditText
            android:id="@+id/fix_goods_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/border"
            android:paddingLeft="5dp"
            android:hint="请输入物品名称"/>

        <EditText
            android:id="@+id/fix_goods_price"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/border"
            android:paddingLeft="5dp"
            android:hint="请输入物品价格"
            android:inputType="number"/>

        <EditText
            android:id="@+id/fix_goods_tel"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/border"
            android:paddingLeft="5dp"
            android:inputType="number"
            android:hint="请输入联系方式"/>

        <EditText
            android:id="@+id/fix_goods_describe"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/border"
            android:paddingLeft="5dp"
            android:gravity="left"
            android:hint="请输入物品描述"/>
        <!--此处的gravity是让hint中的文字放在EditView框的左上方-->

        <Button
            android:id="@+id/btn_fix_publish"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/btn_radius"
            android:layout_marginTop="20dp"
            android:text="确定"/>

    </LinearLayout>




</LinearLayout>